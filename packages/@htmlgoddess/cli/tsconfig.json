{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*", "__tests__",
  ],
  "exclude": ["**/*.test.ts"]
}
